@model ProyectoV1.Models.usuario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<h2>Crear Usuarios</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        
        <div class="contac col-xs-8">
            <div class="form-horizontal">
                <div align="center"><h6><font color="red">@ViewBag.Error</font></h6></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.rut, "Rut", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.rut, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rut, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.clave, "Clave", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.PasswordFor(m => m.clave, new { @class = "form-control" })
                      
                        @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.rol, "Rol", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @{
                            List<SelectListItem> listItems = new List<SelectListItem>();
                            listItems.Add(new SelectListItem
                            {
                                Text = "Usuario",
                                Value = "Usuario"
                            });
                            listItems.Add(new SelectListItem
                            {
                                Text = "Administrador",
                                Value = "Administrador",
                            });
                        }
                       @Html.DropDownListFor(model => model.rol, listItems, "Seleccione ...", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Usuarios", "InicioAdministrador", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
            </div>
            
</div>
</div>
}
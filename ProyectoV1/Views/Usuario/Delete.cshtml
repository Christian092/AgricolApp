@model ProyectoV1.Models.usuario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}


<h3>¿Seguro Quieres Eliminar este @Html.DisplayFor(model => model.rol)?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Rut
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rut)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rol)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
            <button type="submit" class="btn btn-danger glyphicon glyphicon-trash"> Eliminar</button>
            @Html.ActionLink(" Volver al Inicio", "InicioAdministrador", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-arrow-left" })
        </div>
    }
</div>

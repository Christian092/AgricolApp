@model IPagedList<ProyectoV1.Models.usuario>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "InicioAdministrador";
    Layout = "~/Views/Shared/_Administrador.cshtml";
    var grid = new WebGrid(source: Model, canPage: false);
}
<br />
<div align="center">
    <h2>Administrar Usuarios</h2>

    <p>
        @Html.ActionLink(" Añadir Usuario", "Create", " ", htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-plus " })
    </p>
    <table class="table table-hover" style="width:auto">
        <tr>
            <th>
               Rut
            </th>
            <th>
                Contraseña
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.rut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rol)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-pencil" })
                    
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>

</div>

@model ProyectoV1.Models.secamiento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<h2>Añade un Secamiento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>

        <div class="contac col-xs-9">
            <div class="form-horizontal">
                <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cantidad_ubres,"Tetas Secadas", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.cantidad_ubres, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cantidad_ubres, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.animal_id, "Animal", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.DropDownList("animal_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.animal_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.medicamento_id, "Medicamento", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.DropDownList("medicamento_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.medicamento_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Secamientos", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
            </div>
            </div>
            <div class="alert alert-warning contac2">

                <div>
                    <div>
                        <div>
                            <a href="~/Medicamento/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:180px; height:30px'> Añadir Medicamento</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>

}
<style>
    .contac {
        float: left;
    }

    .contac2 {
        float: right;
    }

    .div1 {
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        text-align: left;
    }
</style>

@model ProyectoV1.Models.venta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>

        <div class="contac col-xs-8">
            <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
            <div class="form-horizontal">
                <h2>Ingresa la venta que has realizado</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha, "Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.pesaje,"Pesaje (Kg)", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.pesaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pesaje, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.precio, "Precio ($)", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.animal_id, "Codigo del Animal", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.DropDownList("animal_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.animal_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comprador_id, "Comprador", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.DropDownList("comprador_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.comprador_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Ventas", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
            </div>
            
        </div>
        <div class="alert alert-warning contac2">

            <div>
                <div>
                    <div>
                        <a href="~/Comprador/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:180px; height:30px'> Añadir Comprador</a>
                    </div>
                    
                </div>

            </div>
        </div>
</div>
}
<style>
    .contac {
        float: left;
    }

    .contac2 {
        float: right;
    }

    .div1 {
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        text-align: left;
    }
</style>
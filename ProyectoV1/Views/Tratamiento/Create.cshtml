@model ProyectoV1.Models.tratamiento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>

        <div class="contac col-xs-8">
            <div class="form-horizontal">
                <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
                <hr />
                <h2>Añade un Tratamiento</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha, "Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

               

                <div class="form-group">
                    @Html.LabelFor(model => model.tratador_id, "Tratador", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.DropDownList("tratador_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.tratador_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.tipo_tratamiento_id, "Tipo de Tratamiento", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.DropDownList("tipo_tratamiento_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.tipo_tratamiento_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Tratamientos", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
                <div class="alert alert-warning alert-dismissable" size="autofocus">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Información! </strong>Se alertará un dia antes en relacion a la fecha del tratamiento
                </div>
            </div>
        </div>
        <div class="alert alert-warning contac2">
            
            <div>
                <div>
                    <div>
                        <a href="~/Tratador/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:150px; height:30px'> Añadir Tratador</a>
                    </div>
                    <br />
                    <div>
                        <a href="~/Tipo_tratamiento/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:150px; height:30px'> Añadir Tipo</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
}

<style>
    .contac {
        float: left;
    }

    .contac2 {
        float: right;
    }

    .div1 {
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        text-align: left;
    }
</style>

@model ProyectoV1.Models.animal


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2>Añade un Animal</h2>

<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div>

        <div class="contac col-xs-8">
            <div class="form-horizontal">

                <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.codigo_sag, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">

                        @Html.EditorFor(model => model.codigo_sag, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.codigo_sag, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.sexo, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-xs-6">
                        @{
                            List<SelectListItem> listItems = new List<SelectListItem>();
                            listItems.Add(new SelectListItem
                            {
                                Text = "Macho",
                                Value = "M"
                            });
                            listItems.Add(new SelectListItem
                            {
                                Text = "Hembra",
                                Value = "H",
                            });
                        }
                        @Html.DropDownListFor(model => model.sexo, listItems, "Seleccione Uno ...", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.fec_nac, "Nacimiento", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.fec_nac, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fec_nac, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha_ing, "Ingreso al fundo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.fecha_ing, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fecha_ing, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tipo_id, "Tipo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.DropDownList("tipo_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.tipo_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.raza_id, "Raza", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.DropDownList("raza_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.raza_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.estado_id, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-6">
                        @Html.DropDownList("estado_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.estado_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" align="left">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir Animal</button>
                        @Html.ActionLink(" Ver Animales", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>

            </div>

        </div>
        <div class="alert alert-warning contac2">
           
            <div>
                <div>
                    <div>
                        <a href="~/Tipo/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:130px; height:30px'> Crear Tipo </a>
                    </div>
                    <br />
                    <div>
                        <a href="~/Raza/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:130px; height:30px'> Crear Raza </a>
                    </div>
                    <br />
                    <div>
                        <a href="~/Estado/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:130px; height:30px'> Crear Estado</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
                            }

<style>
    .contac{
	
	float: left;
}
    .contac2{
	
	float: right;
}
    .div1{
    display:inline-block;
    margin-left:auto;
    margin-right:auto;
    text-align:left;
}
</style>


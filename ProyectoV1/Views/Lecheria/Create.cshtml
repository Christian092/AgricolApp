@model ProyectoV1.Models.lecheria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="estilo1 col-xs-8">
                <div class="form-horizontal">
                    <div align="left">
                        <h2>Añade la Lecheria de tu Fundo</h2>

                        <hr/>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.capacidad, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-xs-6">
                                @Html.EditorFor(model => model.capacidad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.capacidad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ordenas_diarias, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-xs-6">
                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1",
                                        Value = "1"
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "2",
                                        Value = "2",
                                    });

                                }
                                @Html.DropDownListFor(model => model.ordenas_diarias, listItems, "Seleccione ...", htmlAttributes: new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.ordenas_diarias, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.cantidad_trabajadores, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-xs-6">
                                @Html.EditorFor(model => model.cantidad_trabajadores, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.cantidad_trabajadores, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.tipo_lecheria_id, "Tipo", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-xs-6">
                                @Html.DropDownList("tipo_lecheria_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.tipo_lecheria_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fabricante_id, "Fabricante", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-xs-6">
                                @Html.DropDownList("fabricante_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fabricante_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                                @Html.ActionLink(" Ver Lecheria", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
}


<div class="alert alert-warning estilo2">
            <div>
            <a href="~/Tipo_lecheria/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:220px; height:30px'> Añadir Tipo de Lecheria</a>
        </div>
        <br />
        <div>
            <a href="~/Fabricante/Create" class="btn btn-success glyphicon glyphicon-plus" role="button" align="right" style='width:220px; height:30px'> Añadir Fabricante</a>
        </div>
        <br />
       
</div>




<style>
    .estilo1 {
        float: left;
    }

    .estilo2 {
        float: right;
    }

</style>
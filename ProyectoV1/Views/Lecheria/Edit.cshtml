                @Html.ValidationMessageFor(model => model.cantidad_trabajadores, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipo_lecheria_id, htmlAttributes: new { @class = "control-label col-md-2" })

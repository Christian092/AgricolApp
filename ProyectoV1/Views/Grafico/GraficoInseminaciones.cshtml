
@{
    ViewBag.Title = "GraficoInseminaciones";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2 align="center">Inseminaciones Realizadas Por Año</h2>
<br />

<html>
<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //Load Data Here
            var chartData = null;
            $.ajax({
                url: '/Grafico/ObtenerInseminacionesAnuales',
                type: 'GET',
                dataType: 'json',
                data: '',
                success: function (d) {
                    chartData = d;
                },
                error: function () {
                    alert('Error!');
                }
            }).done(function () {
                console.log(chartData);
                drawDashboard(chartData);
            });
        });
      // Load the Visualization API and the controls package.
       google.load('visualization', '1', { packages: ['controls'] });

      // Set a callback to run when the Google Visualization API is loaded.
      google.setOnLoadCallback(drawDashboard);

      // Callback that creates and populates a data table,
      // instantiates a dashboard, a range slider and a pie chart,
      // passes in the data and draws it.
      function drawDashboard(d) {
          var chartData = d;
          var data = null;
        // Create our data table.
          data = google.visualization.arrayToDataTable(chartData);

          var view = new google.visualization.DataView(data);

        // Create a dashboard.
        var dashboard = new google.visualization.Dashboard(
            document.getElementById('dashboard_div'));

        // Create a range slider, passing some options

        var countryPicker = new google.visualization.ControlWrapper({
            controlType: 'CategoryFilter',
            containerId: 'negeri',
            dataTable: data,
            options: {
                filterColumnLabel: 'Año',
                ui: {
                    labelStacking: 'vertical',
                    allowTyping: true,
                    allowMultiple: true,
                    caption: "Escoge un año",

                }
            }
        });
        // Create a pie chart, passing some options
        var pieChart = new google.visualization.ChartWrapper({
            'chartType': 'ColumnChart',
            'containerId': 'chart_div',
            'options': {
                'width': 750,
                'height': 550,
                'pieSliceText': 'value',
                'legend': 'right',
                'hAxis': { title: 'Año' },
                'vAxis': {title: 'Cantidad de inseminaciones'}
            }
        });
        var options = {
            title: 'CANTIDAD DE INSEMINACIONES POR AÑO',

            legend: 'bottom',
            hAxis: {
                title: 'Año'

            },
            vAxis: {

                title: 'Cantidad'
            },

            animation: {
                duration: 3000
            }
        };


        // Establish dependencies, declaring that 'filter' drives 'pieChart',
        // so that the pie chart will only display entries that are let through
        // given the chosen slider range.
        dashboard.bind(countryPicker, pieChart);


        // Draw the dashboard.
        dashboard.draw(view, options);



      }

    </script>
</head>

<body>
    <!--Div that will hold the dashboard-->
    <div id="dashboard_div">

        <br />
        <!--Divs that will hold each control and chart-->
        <div id="negeri"></div>
        <div id="chart_div"></div>
    </div>
</body>
</html>
@model ProyectoV1.Models.tratamiento_animal

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2>Edita el Tratamiento de este Animal</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.animal_id, "Animal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">

                @Html.DropDownList("animal_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.animal_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tratador_id, "Tratador", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">

                @Html.DropDownList("tratador_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tratador_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.tipo_tratamiento_id, "Tratamiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">

                @Html.DropDownList("tipo_tratamiento_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipo_tratamiento_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button type="submit" class="btn btn-primary glyphicon glyphicon glyphicon-floppy-disk"> Guardar</button>
                @Html.ActionLink(" Volver al Inicio", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-arrow-left" })

            </div>

        </div>
    </div>
}


@model ProyectoV1.Models.tipo_lecheria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2>Añade el Tipo de Lecheria</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir Tipo</button>
                <a href="~/Lecheria/Create" class="btn btn-success glyphicon glyphicon-arrow-left"> Volver a lecheria</a>
            </div>
        </div>
    </div>
    <div class="alert alert-warning alert-dismissable div1">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Ejemplos de Tipos de Lecheria:</strong>
        <br />
        - Automatica
        <br />
        - Manual
        <br />
        - Etc.
    </div>
   
}
<style>
    .div1{
    
    display:inline-block;
    margin-left:auto;
    margin-right:auto;
    text-align:left;
}
</style>


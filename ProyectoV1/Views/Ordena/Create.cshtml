@model ProyectoV1.Models.ordena

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>


    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2>Añade La Ordeña del Día</h2>
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha,"Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.litros, "Litros", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.litros, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.litros, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.lecheria_id, "Lecheria", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @Html.DropDownList("lecheria_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.lecheria_id, "", new { @class = "text-danger" })
                    </div>
                </div>
              
                <div class="form-group">
                    @Html.LabelFor(model => model.jornada, "Jornada", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-4">
                        @{
                            List<SelectListItem> listItems = new List<SelectListItem>();
                            listItems.Add(new SelectListItem
                            {
                                Text = "Mañana",
                                Value = "M"
                            });
                            listItems.Add(new SelectListItem
                            {
                                Text = "Tarde",
                                Value = "T",
                            });
                        }
                        @Html.DropDownListFor(model => model.jornada, listItems, "-- Seleccione Uno --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.jornada, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Ordeñas", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
            </div>
        }
    </div>
  




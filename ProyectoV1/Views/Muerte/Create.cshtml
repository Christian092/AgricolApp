@model ProyectoV1.Models.muerte

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<h2>Añade la muerte de algun Animal</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div>
        <div class="contac col-xs-8">
            <div class="form-horizontal">
                <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha, "Fecha de Muerte", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-5">
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.causa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-5">
                        @Html.EditorFor(model => model.causa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.causa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.animal_id, "Animal", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-xs-5">
                        @Html.DropDownList("animal_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.animal_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
                        @Html.ActionLink(" Ver Muertes", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

                    </div>
                </div>
            </div>
           </div>
           
        </div>

    
}
<style>
    .contac {
        float: left;
    }

    .contac2 {
        float: right;
    }

    .div1 {
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        text-align: left;
    }
</style>

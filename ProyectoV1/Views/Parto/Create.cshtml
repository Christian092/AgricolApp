@model ProyectoV1.Models.parto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<h2>Añade un Parto</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div align="center"><h4><font color="red">@ViewBag.Error</font></h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fecha, "Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.madre_id, "Madre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.DropDownList("madre_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.madre_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.animal_id, "Animal Nacido", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.DropDownList("animal_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.animal_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary glyphicon glyphicon-plus"> Añadir</button>
            @Html.ActionLink(" Ver Partos", "Index", " ", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-eye-open" })

        </div>
</div>
        </div>
}
<div class="alert alert-warning alert-dismissable" size="autofocus">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>¡Cuidado!</strong> Para añadir un Parto primero debes añadir el <a href="~/Animal/Create" class="alert-link">Animal</a>
</div>

